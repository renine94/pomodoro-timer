{
  "manifest_version": 3,
  "name": "뽀모도로 타이머",
  "version": "1.0.0",
  "description": "작업과 휴식을 관리하는 뽀모도로 타이머 확장프로그램",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "뽀모도로 타이머"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
